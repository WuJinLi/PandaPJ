<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                                            android:id="@+id/pulltorefreshscrollview_homepage"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#11000000"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <!--横幅-->
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_homepage"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <LinearLayout
                android:id="@+id/ll_hottest_indicator"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:orientation="vertical">


            <!--熊猫推荐-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/about_sign"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="精彩推荐"
                    android:textColor="#3F51B5"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#11000000"/>

            <!--横向RecyclerView-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_homepage_recommend"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#11000000"/>

            <!--熊猫观察-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="14dp"
                android:text="精彩观察"
                android:textColor="#3F51B5"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#11000000"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <ImageView
                    android:id="@+id/image_homepage_observe"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"/>
                <!--时评-->
                <TextView
                    android:id="@+id/textview_homepage_comment"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/image_homepage_observe"
                    android:background="@drawable/setbar_bg"
                    android:gravity="center"
                    android:text="时评"
                    android:textColor="#FF4081"/>

                <TextView
                    android:id="@+id/textview_homepage_comment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/textview_homepage_comment"
                    android:textColor="@color/black"/>

                <!--分割线-->
                <View
                    android:id="@+id/view_homepage"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textview_homepage_comment"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/image_homepage_observe"
                    android:background="#11000000"/>

                <!--热点-->
                <TextView
                    android:id="@+id/textview_homepage_hot"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_homepage"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/image_homepage_observe"
                    android:background="@drawable/setbar_bg"
                    android:gravity="center"
                    android:text="热点"
                    android:textColor="#FF4081"/>

                <TextView
                    android:id="@+id/textview_homepage_hot_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_homepage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/textview_homepage_hot"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button_homepage_comment"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/image_homepage_observe"
                android:background="#11000000"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_homepage_pandaeyelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/button_homepage_comment"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/image_homepage_observe"
                android:background="#11000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="14dp"
                android:text="《G20看中国》"
                android:textColor="#3F51B5"/>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#11000000"/>

            <!--G20看中国-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_homepage_cctv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</com.handmark.pulltorefresh.library.PullToRefreshScrollView>