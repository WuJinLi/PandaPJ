<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >

    <ImageView
        android:id="@+id/imageview_item_icon"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/textview_item_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageview_item_icon"
        android:layout_below="@+id/textview_item_title"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageview_item_icon"
        android:maxLines="2"
        android:text="brief" />

    <TextView
        android:layout_alignLeft="@+id/textview_item_brief"
        android:id="@+id/textview_item_title"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageview_item_icon"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageview_item_icon"
        android:text="title" />
</RelativeLayout>