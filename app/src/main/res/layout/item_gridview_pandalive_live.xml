<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:padding="3dp"
              >
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/imageview_item_icon"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_item_title"
        android:layout_alignLeft="@+id/imageview_item_icon"
        android:layout_alignRight="@+id/imageview_item_icon"
        android:layout_below="@+id/imageview_item_icon"
        android:text="title"
        />
</RelativeLayout>